# -----------------------------------------------------------------------------
# File        : Makefile
# Author      : Karl Sigurdsson
# Date        : 8 October 2013 
# Description : OpenSCAD Makefile
# -----------------------------------------------------------------------------

# -----------------------------------------------------------------------------
# Variables
# -----------------------------------------------------------------------------

USER = $(shell whoami)
DATE = $(shell date '+%Y_%m_%d')
# -----------------------------------------------------------------------------
# Directory Structure
# -----------------------------------------------------------------------------

RUNDIR	= $(PWD)

# -----------------------------------------------------------------------------
# The first target is help
# -----------------------------------------------------------------------------

help:
	@echo ""
	@echo "The following targets are available:"
	@echo "------------------------------------"
	@egrep '^[0-9a-zA-Z\#_]+:' Makefile | cut -f1 -d":" | more
	@echo ""

# -----------------------------------------------------------------------------
# OpenSCAD Targets
# -----------------------------------------------------------------------------

gui: clean
	@echo ""
	@echo "Running OpenSCAD Gui ....."
	@echo ""
	openscad u_mouse_chassis.scad

clean:
	@echo ""
	@echo "Cleaning Up ....."

.PHONY:	help compile clean

